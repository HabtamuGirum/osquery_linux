[Unit]
Description=The osquery Daemon
After=network.service syslog.service

[Service]
TimeoutStartSec=0
ExecStart=env QT_QPA_PLATFORM=wayland /opt/osquery/bin/vistar
Restart=on-failure
RestartSec=30
KillMode=control-group
KillSignal=SIGTERM
TimeoutStopSec=15
CPUQuota=20%

[Install]
WantedBy=multi-user.target
